{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/*.ts", "**/*.json", "hardhat.config.cts"],
  "files": ["hardhat.config.cts"]
}
